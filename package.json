{
  "name": "fontometer",
  "version": "0.0.1",
  "description": "Tool to generate font width from google font",
  "main": "app.js",
  "scripts": {
    "test": "eslint lib/*.js && nyc --reporter=html --reporter=text mocha test",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "serve": "http-server dist/ &",
    "build": "mkdir -p dist && cp index.html dist/ && browserify --node app.js -o dist/bundle.js"
  },
  "keywords": [
    "font",
    "svg"
  ],
  "author": "Dan Takyrbashev",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@drom/eslint-config": "^0.7.0",
    "browserify": "^14.4.0",
    "coveralls": "^3.0.0",
    "escodegen": "^1.9.0",
    "eslint": "^4.9.0",
    "esprima": "^4.0.0",
    "http-server": "^0.10.0",
    "mocha": "^4.0.1",
    "nyc": "^11.2.1"
  },
  "eslintConfig": {
    "extends": "@drom/eslint-config/eslint4/node4"
  }
}
